{
  "name": "gem-scramble-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "npm run db:migrate && node dist/server.js",
    "build": "npm run db:generate && npm run build:ts && npm run build:copy-assets",
    "build:ts": "tsc -p tsconfig.json",
    "build:copy-assets": "node scripts/copy-assets.js",
    "postbuild": "npm run build:copy-assets",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "firebase-admin": "^12.7.0",
    "helmet": "^7.2.0",
    "ioredis": "^5.8.0",
    "pino": "^9.12.0",
    "pino-http": "^10.3.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.17",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.4.5"
  }
}
